@model Assignment1.Models.User

@{
    ViewData["Title"] = "Signup";
}

<h1>Signup</h1>
<form asp-action="Signup" method="post">
    <label>First Name:</label>
    <input asp-for="FirstName" required /><br />

    <label>Last Name:</label>
    <input asp-for="LastName" required /><br />

    <label>Email:</label>
    <input asp-for="Email" type="email" required /><br />

    <label>Phone Number:</label>
    <input asp-for="Phone" type="tel" required /><br />

    <label>Password:</label>
    <input asp-for="Password" type="password" required /><br />

    <label>Confirm Password:</label>
    <input name="confirmPassword" type="password" required /><br />

    <button type="submit">Signup</button>
</form>

<p style="color: green;">@ViewBag.Message</p>

<p><a asp-action="Login">Already have an account? Login here</a></p>